// See https://go.microsoft.com/fwlink/?LinkId=733558
// for the documentation about the tasks.json format
{
      "version": "2.0.0"
   ,
   "command": "make"
   ,
   "args": []
   ,  "tasks": [
      {
         "label": "make",
         "type": "shell",
         "problemMatcher": {
            "owner": "base",
            "fileLocation": [
               "relative",
               "${workspaceRoot}"
            ],
            "pattern": {
               "regexp": "^(.*):(\\d+):\\s+(warning|error|syntax error)[^:]*:\\s+(.*)$",
               "file": 1,
               "line": 2,
               "severity": 3,
               "message": 4
            }
         },
         "group": {
            "kind": "build",
            "isDefault": true
         }
      },
      {
         "label": "clean",
         "type": "shell",
         "args": [
            "clean"
         ],
         "problemMatcher": []
      },
      {
         "label": "cleanall",
         "type": "shell",
         "args": [
            "cleanall"
         ],
         "problemMatcher": []
      },
      {
         "label": "run",
         "type": "shell",
         "command": "cpct_winape",
         "args": [
            "-a"
         ],
         "problemMatcher": []
      }
   ]
}